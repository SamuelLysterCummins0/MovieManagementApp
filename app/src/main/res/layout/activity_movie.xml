<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="org.wit.moviemanager.activities.MovieActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            app:elevation="0dip"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/white" />
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/appBarLayout"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnFavorite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@color/colorBackground"
                        android:text="⭐ Favorite"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/btnWatchlist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@color/colorBackground"
                        android:text="📋 Watchlist"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:padding="12dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/movieTitle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:autofillHints=""
                    android:hint="@string/hint_movieTitle"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@color/colorBackground"
                    android:textSize="14sp"
                    tools:ignore="VisualLintTextFieldSize" />

                <EditText
                    android:id="@+id/movieDirector"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:hint="@string/hint_movieDirector"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@color/colorBackground"
                    android:textSize="14sp"
                    tools:ignore="VisualLintTextFieldSize" />

                <Spinner
                    android:id="@+id/movieGenre"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:background="@color/colorBackground"
                    android:padding="8dp"
                    android:spinnerMode="dropdown" />

                <EditText
                    android:id="@+id/movieYear"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:hint="@string/hint_movieYear"
                    android:importantForAutofill="no"
                    android:inputType="none"
                    android:focusable="false"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@color/colorBackground"
                    android:textSize="14sp"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:drawablePadding="8dp"
                    tools:ignore="VisualLintTextFieldSize" />

                <LinearLayout
                    android:id="@+id/ratingSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <NumberPicker
                        android:id="@+id/movieRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/colorBackground"
                        android:theme="@style/NumberPickerTheme" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cinemaSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/movieCinema"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="8dp"
                        android:hint="@string/hint_movieCinema"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:background="@color/colorBackground"
                        android:textSize="14sp"
                        tools:ignore="VisualLintTextFieldSize" />
                </LinearLayout>

                <EditText
                    android:id="@+id/movieDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:hint="@string/hint_movieDescription"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@color/colorBackground"
                    android:textSize="14sp"
                    android:gravity="top"
                    tools:ignore="VisualLintTextFieldSize" />

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@color/colorAccent"
                    android:padding="8dp"
                    android:stateListAnimator="@null"
                    android:text="@string/button_addMovie"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="VisualLintButtonSize" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>